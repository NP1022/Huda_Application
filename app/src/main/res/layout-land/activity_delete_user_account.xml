<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/scrollViewDeleteAccount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/deleteAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:visibility="visible"
        tools:context=".deleteUserAccount">

        <ImageView
            android:id="@+id/backButton_10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icons8_back_arrow_100" />

        <TextView
            android:id="@+id/registerPara2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/headerUpdateEmail"
            android:textAlignment="center"
            android:textColor="#5A5959"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/registrationFormHeader" />

        <TextView
            android:id="@+id/registerPara3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/deleteUserHeader2"
            android:textAlignment="center"
            android:textColor="#5A5959"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <TextView
            android:id="@+id/registrationFormHeader"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="@string/deleteUserHeader"
            android:textAlignment="center"
            android:textColor="#043670"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#686868"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/registerPara2" />

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#686868"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <EditText
            android:id="@+id/yesOrNo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:hint="@string/userDeleteInput"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#686868"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/registerPara3" />

        <EditText
            android:id="@+id/confirmYesOrNo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:hint="@string/userConfirmDelete"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#686868"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/yesOrNo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteUserButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle"
            android:text="@string/update"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/vg3"
            app:layout_constraintRight_toRightOf="@id/vg4"
            app:layout_constraintTop_toBottomOf="@+id/confirmYesOrNo"
            app:layout_constraintVertical_bias="0.045" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vg4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>