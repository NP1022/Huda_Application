<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:id="@+id/scrollViewUpdatePass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/updatePassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:visibility="visible"
        tools:context=".updatePassword">

        <ImageView
            android:id="@+id/backButton_10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icons8_back_arrow_100" />

        <TextView
            android:id="@+id/loginPara4"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:text="@string/headerUpdateEmail"
            android:textAlignment="center"
            android:textColor="#5A5959"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/registrationFormHeader" />

        <TextView
            android:id="@+id/loginPara5"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:text="@string/enterNewPassTitle"
            android:textAlignment="center"
            android:textColor="#5A5959"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <TextView
            android:id="@+id/registrationFormHeader"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="@string/updatePass"
            android:textAlignment="center"
            android:textColor="#043670"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#686868"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/password"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/loginPara4" />

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#686868"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#686868"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/vg3"
            app:layout_constraintRight_toRightOf="@id/vg4"
            app:layout_constraintTop_toBottomOf="@+id/loginPara5" />

        <EditText
            android:id="@+id/confirmPass"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:hint="@string/Reenter"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#686868"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/vg4"
            app:layout_constraintStart_toStartOf="@id/vg3"
            app:layout_constraintTop_toBottomOf="@+id/password2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle"
            android:text="@string/update"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/vg3"
            app:layout_constraintRight_toRightOf="@id/vg4"
            app:layout_constraintTop_toBottomOf="@+id/confirmPass"
            app:layout_constraintVertical_bias="0.045" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vg4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>