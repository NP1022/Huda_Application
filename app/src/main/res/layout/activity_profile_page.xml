<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ProfilePage">

    <ImageView
        android:id="@+id/backButton_10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_back_arrow_100" />

    <ImageView
        android:id="@+id/hudaLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:contentDescription="hudaLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/huda_logo" />

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Welcome, User"
        android:textColor="@color/hudaBlue"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/hudaLogo"
        app:layout_constraintStart_toStartOf="@+id/hudaLogo"
        app:layout_constraintTop_toBottomOf="@+id/hudaLogo" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_heading">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"

                android:layout_marginEnd="120dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#5E5656"
                android:clipToOutline="true"
                android:src="@drawable/ic_baseline_person_24"
                app:layout_constraintBottom_toTopOf="@+id/layout_first_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColorHint="@color/black"
                app:helperText="First Name"
                app:helperTextTextColor="@color/hudaBlue"
                app:helperTextTextAppearance="@style/TextAppearance.AppCompat"
                app:hintTextColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_image"
                app:layout_constraintWidth_percent="0.7">

                <TextView
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="First Name"
                    android:textAllCaps="true"
                    android:textColor="@color/hudaBlue"
                    android:textColorHint="#808080"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColorHint="#808080"
                app:helperTextTextColor="@color/hudaBlue"
                app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Inverse"
                app:helperText="Last Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_first_name"
                app:layout_constraintWidth_percent="0.7">

                <TextView
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Last Name"
                    android:textColor="@color/hudaBlue"
                    android:textColorHint="#808080"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColorHint="#808080"
                app:helperText="Date of Birth"
                app:helperTextTextColor="@color/hudaBlue"
                app:helperTextTextAppearance="@style/TextAppearance.AppCompat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_last_name"
                app:layout_constraintWidth_percent="0.7">

                <TextView
                    android:id="@+id/et_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:text="Date of Birth"
                    android:textColor="@color/hudaBlue"
                    android:textColorHint="#808080"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColorHint="#808080"
                app:helperText="Email Address"
                app:helperTextTextColor="@color/hudaBlue"
                app:helperTextTextAppearance="@style/TextAppearance.AppCompat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_email"
                app:layout_constraintWidth_percent="0.7">

                <TextView
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:text="Email Address"
                    android:textAllCaps="true"
                    android:textColor="@color/hudaBlue"
                    android:textColorHint="#808080"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/uploadPicture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/hudaBlue"
                android:clickable="true"
                android:src="@drawable/ic_menu_camera"
                app:fabCustomSize="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                app:layout_constraintEnd_toEndOf="@+id/profile_image"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updatePassword"
                android:layout_width="272dp"
                android:layout_height="59dp"
                android:layout_marginStart="69dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/buttonstyle"
                android:text="Update Password"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logoutButton"
                android:layout_width="272dp"
                android:layout_height="59dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="62dp"
                android:background="@drawable/buttonstyle"
                android:text="@string/logout"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/updatePassword"
                tools:ignore="SpeakableTextPresentCheck" />

            <!--            <TextView-->
            <!--                android:id="@+id/textView"-->
            <!--                android:layout_width="282dp"-->
            <!--                android:layout_height="57dp"-->
            <!--                android:text="TextView"-->
            <!--                tools:layout_editor_absoluteX="22dp"-->
            <!--                tools:layout_editor_absoluteY="202dp" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>